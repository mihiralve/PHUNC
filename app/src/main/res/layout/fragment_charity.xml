<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.psiada.app.punc.Charity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frag_charity">

            <TextView
                android:id="@+id/charity_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_alignParentTop="true"
                android:layout_margin="8dp"
                android:layout_marginTop="16dp"
                android:text="Adopt-A-Future"
                android:textSize="25sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/charityImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@id/charity_name"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"/>

            <TextView
            android:id="@+id/charity_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="left"
            android:layout_margin="16dp"
            android:layout_below="@id/charityImage"
            android:layout_marginTop="16dp"
            android:text="@string/charityDesc"
            android:textSize="18sp" />

            <TextView
                android:id="@+id/donation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="8dp"
                android:layout_below="@id/charity_body"
                android:layout_centerHorizontal="true"
                android:text="@string/donation"
                android:textSize="18sp"
                android:clickable="true"
                android:textColorLink="#2f4f4f"
                android:textAlignment="center"/>

        </RelativeLayout>


    </ScrollView>

</FrameLayout>
